<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="custom_entity_attribute_set_id" component="Magento_Catalog/js/components/visible-on-option/fieldset" sortOrder="15">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="valuesForOptions" xsi:type="array">
                    <item name="smile_custom_entity" xsi:type="string">smile_custom_entity</item>
                </item>
            </item>
        </argument>
        <settings>
            <collapsible>true</collapsible>
            <label translate="true">Custom entity configuration</label>
        </settings>
        <field name="custom_entity_attribute_set_id" sortOrder="15" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">product_attribute</item>
                </item>
            </argument>
            <settings>
                <dataType>string</dataType>
                <label translate="true">Custom entity type</label>
                <dataScope>custom_entity_attribute_set_id</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Smile\CustomEntity\Model\CustomEntity\AttributeSet\Options"/>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
</form>
